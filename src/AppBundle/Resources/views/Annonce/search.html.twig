{% extends 'base.html.twig' %}

{% block header %}
    <div class="container">
        <div class="row">
            <div class="col-md-6 col-md-offset-3">
                <h1>Votre recherche sur PA Immo</h1>
            </div>
        </div>
    </div>

{% endblock %}


{% block body %}
    <h4>Saisir votre recherche</h4>
    <form method="post">
        <div class="form-group">

            <input type="text" name="_codepostal"
                   class="form-control"
                   placeholder="Code postal">
        </div>
        <div class="form-group">
            <p>
                Prix entre
                <select class="list-group list-group-item-text"name="price_min">
                    <option value selected="selected">Prix min</option>
                    <option value=0>0</option>
                    <option value=100000>100000</option>
                    <option value=200000>200000</option>
                    <option value=300000>300000</option>
                    <option value=400000>400000</option>
                </select>
                et
                <select class="list-group list-group-item-text" name="price_max">
                    <option value selected="selected">Prix max</option>
                    <option value=0>0</option>
                    <option value=100000>100000</option>
                    <option value=200000>200000</option>
                    <option value=300000>300000</option>
                    <option value=400000>400000</option>
                </select>
            </p>

        </div>

        <div class="form-group">
            <button type="submit" class="btn btn-primary">Rechercher</button>
        </div>
    </form>
{% endblock %}